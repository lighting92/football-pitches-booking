@model List<FootballPitchesBooking.Models.JoinSystemRequest>
@{
    ViewBag.REQUEST = "active";
    ViewBag.Title = "QUẢN LÝ YÊU CẦU THAM GIA HỆ THỐNG";
    Layout = "~/Views/Shared/_WebsiteStaffLayout.cshtml";
}

<h1><span>QUẢN LÝ</span> YÊU CẦU THAM GIA HỆ THỐNG</h1>

@if (TempData["DeleteError"] != null)
{
    <p style="color:red">@TempData["DeleteError"]</p>
}

@if (Model != null && Model.Count != 0)
{
    <table border="1">
        <thead>
            <tr>
                <th>Tên Tài Khoản</th>
                <th>Họ Và Tên</th>
                <th>Địa Chỉ</th>
                <th>Số Điện Thoại</th>
                <th>Tên Sân Bóng</th>
                <th>Địa Chỉ Sân</th>
                <th>Ghi Chú</th>
                <th>Trạng Thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.User.UserName</td>
                    <td>@item.FullName</td>                    
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.StadiumName</td>
                    <td>@item.StadiumAddress</td>
                    <td>@item.Note</td>
                    <td>@item.Status</td>
                    <td><a href="/WebsiteStaff/EditJSR?Id=@item.Id">Chỉnh Sửa</a></td>
                    <td><a href="/WebsiteStaff/DeleteJSR?Id=@item.Id">Xóa</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Hiện tại không có yêu cầu nào.</p>
}
