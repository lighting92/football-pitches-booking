@model FootballPitchesBooking.Models.RankModels.RankModel
@{
    ViewBag.Title = "Thêm Hạng";
    ViewBag.RANK = "active";
    Layout = "~/Views/Shared/_WebsiteStaffLayout.cshtml";
}

<h2>Thêm Thứ Hạng</h2>
@if (Model != null && Model.ErrorMessages.Count() > 0)
{
    <div style="color:red">
        @foreach (var error in Model.ErrorMessages)
        {
            <p>- @error</p>
        }
    </div>
}

<form action="AddMemberRank" method="post">
    <table> 
        <tr>
            <td>Tên hạng:</td>
            <td><input type="text" name="RankName" value="" /></td>
        </tr>
        <tr>
            <td>Điểm:</td>
            <td><input type="text" name="Point" value="" /></td>
        </tr>
        <tr>
            <td>Ưu đãi giảm giá:</td>
            <td><input type="text" name="Promotion" value="" /></td>
        </tr> 
        
        <tr>
            <td colspan="2">
                <button type="submit">Lưu</button>
                <button type="button" onclick="window.location = '/WebsiteStaff/MemberRanks'">Hủy bỏ</button>
            </td>
        </tr>
    </table>
</form>