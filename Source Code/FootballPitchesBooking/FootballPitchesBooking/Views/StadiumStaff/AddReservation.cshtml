@model FootballPitchesBooking.Models.StadiumStaffModels.ReservationModel
@{
    ViewBag.RESERVATION = "active";
    ViewBag.Title = "Thêm Đơn Đặt Sân";
    Layout = "~/Views/Shared/_StadiumStaffLayout.cshtml";
}

<script type="text/ecmascript">
    function check() {
        var flag = 0;
        var date = $("input[name=Date]").val();
        var startTime = $("input[name=StartTime]").val();
        var fullname = $("input[name=FullName]").val();
        var email = $("input[name=Email]").val();
        var phone = $("input[name=PhoneNumber]").val();
        var needRival = $('#NeedRival').val();
        var rivalStatus = $("#RivalStatus").val();
        var rivalName = $("input[name=RivalName]").val();
        var rivalemail = $("input[name=RivalEmail]").val();
        var rivalphone = $("input[name=RivalPhone]").val();
        var reg = /^(\w+[\.])*\w+@@(\w+\.)+[a-zA-Z]+$/;
        var aln = /^[a-z|A-Z|0-9]*$/;
        var address = $("#txtAddress").val();
        var add = /^[a-zA-Z0-9-\/] ?([a-zA-Z0-9-\/]|[a-zA-Z0-9-\/] )*[a-zA-Z0-9-\/]$/;


        if (date == "") {
            $("#Date_Error").text("Xin vui lòng chọn ngày đặt sân");
            $("#Date_Error").css("display", "block");
            flag++;
        }
        else {
            $("#Date_Error").text(" ");
            $("#Date_Error").css("display", "none");
        }

        if (startTime == "") {
            $("#StartTime_Error").text("Xin vui lòng chọn giờ đặt sân");
            $("#StartTime_Error").css("display", "block");
            flag++;
        }
        else {
            $("#StartTime_Error").text(" ");
            $("#StartTime_Error").css("display", "none");
        }

        if (fullname == "" || fullname.length > 30) {
            $("#FullName_Error").text("Yêu cầu tên phải từ 1 đến 30 kí tự");
            $("#FullName_Error").css("display", "block");
            flag++;

        }
        else {
            $("#FullName_Error").text(" ");
            $("#FullName_Error").css("display", "none");
        }

        if (!reg.test(email) && email.length > 0) {
            $("#Email_Error").text("Email không chính xác");
            $("#Email_Error").css("display", "block");
            flag++;
        }
        else {
            $("#Email_Error").text(" ");
            $("#Email_Error").css("display", "none");
        }

        if (phone == "" || phone.length < 10 || phone.length > 11) {
            $("#PhoneNumber_Error").text("Yêu cầu phải nhập đúng số điện thoại");
            $("#PhoneNumber_Error").css("display", "block");
            flag++;

        }
        else {
            $("#PhoneNumber_Error").text(" ");
            $("#PhoneNumber_Error").css("display", "none");
        }

        if (needRival == 'True') {
            if (rivalStatus == 'Waiting') {
                if (rivalName.length > 0) {
                    $("#RivalName_Error").text("Để trống nếu đang chờ đối thủ");
                    $("#RivalName_Error").css("display", "block");
                    flag++;

                }
                else {
                    $("#RivalName_Error").text(" ");
                    $("#RivalName_Error").css("display", "none");
                }

                if (rivalemail.length > 0) {
                    $("#RivalEmail_Error").text("Để trống nếu đang chờ đối thủ");
                    $("#RivalEmail_Error").css("display", "block");
                    flag++;
                }
                else {
                    $("#RivalEmail_Error").text(" ");
                    $("#RivalEmail_Error").css("display", "none");
                }

                if (rivalphone.length > 0) {
                    $("#RivalPhone_Error").text("Để trống nếu đang chờ đối thủ");
                    $("#RivalPhone_Error").css("display", "block");
                    flag++;

                }
                else {
                    $("#RivalPhone_Error").text(" ");
                    $("#RivalPhone_Error").css("display", "none");
                }
            }
            else {
                if (rivalName.length > 30 && rivalName.length < 1) {
                    $("#RivalName_Error").text("Yêu cầu tên phải từ 1 đến 30 kí tự");
                    $("#RivalName_Error").css("display", "block");
                    flag++;

                }
                else {
                    $("#RivalName_Error").text(" ");
                    $("#RivalName_Error").css("display", "none");
                }

                if (rivalemail.length > 0 && !reg.test(rivalemail)) {
                    $("#RivalEmail_Error").text("Email không chính xác");
                    $("#RivalEmail_Error").css("display", "block");
                    flag++;
                }
                else {
                    $("#RivalEmail_Error").text(" ");
                    $("#RivalEmail_Error").css("display", "none");
                }

                if (rivalphone.length < 10 || rivalphone.length > 11) {
                    $("#RivalPhone_Error").text("Yêu cầu phải nhập đúng số điện thoại");
                    $("#RivalPhone_Error").css("display", "block");
                    flag++;

                }
                else {
                    $("#RivalPhone_Error").text(" ");
                    $("#RivalPhone_Error").css("display", "none");
                }
            }
        }

        if (flag > 0) {
            return false;
        } else return true;
    }
</script>

@{
    int field = Model.Fields.FirstOrDefault().Id;
    string date = DateTime.Now.ToString("dd/MM/yyyy");
    string time = (DateTime.Now.Hour + 1).ToString() + ":00";
    double duration = 1;
    string fullname = "";
    string phone = "";
    string email = "";
    string status = "";
    bool needRival = false;
    string rivalname = "";
    string rivalphone = "";
    string rivalemail = "";
    string rivalstatus = "";

    if (Model.Resv != null)
    {
        field = Model.Resv.FieldId;
        date = Model.Resv.Date.ToString("dd/MM/yyyy");
        time = string.Concat((int)Model.Resv.StartTime, ":", ((Model.Resv.StartTime - (int)Model.Resv.StartTime) * 60).ToString("00"));
        duration = Model.Resv.Duration;
        fullname = Model.Resv.FullName;
        phone = Model.Resv.PhoneNumber;
        email = Model.Resv.Email == null ? "" : Model.Resv.Email;
        status = Model.Resv.Status;
        needRival = Model.Resv.NeedRival;
        rivalname = Model.Resv.RivalName == null ? "" : Model.Resv.RivalName;
        rivalphone = Model.Resv.RivalPhone == null ? "" : Model.Resv.RivalPhone;
        rivalemail = Model.Resv.RivalEmail == null ? "" : Model.Resv.RivalEmail;
        rivalstatus = Model.Resv.RivalStatus == null ? "" : Model.Resv.RivalStatus;
    }
}

<div class="row stadiumstaff-create-reservation">
    <div class="span12">
        <div class="row">
            <div class="span9">
                <form action="AddReservation?stadium=@Request.QueryString["stadium"]" method="post" class="form-horizontal" enctype="multipart/form-data">
                    <fieldset>
                        <h2>THÊM ĐƠN ĐẶT SÂN</h2>
                        @if (Model.ErrorMessages != null && Model.ErrorMessages.Count() > 0)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in Model.ErrorMessages)
                                {
                                    <p>- @error</p>
                                }
                            </div>
                        }
                        <div class="row">
                            <div class="span9">
                                <h4>THÔNG TIN ĐẶT SÂN:</h4>
                            </div>
                            <div class="span3">
                                <label>
                                    Số sân
                                    <select id="Fields" name="Fields" data-cur="@field">
                                        @if (Model.Fields != null && Model.Fields.Count() > 0)
                                        {
                                            foreach (var item in Model.Fields)
                                            {
                                                if (item.IsActive)
                                                {
                                            <option value="@item.Id">@item.Number - Sân @item.FieldType người</option>
                                                }
                                            }
                                        }
                                    </select>
                                    <script type="text/javascript">
                                        $(document).ready(function () {
                                            $("#Fields").val($("#Fields").data("cur"));
                                        });
                                    </script>
                                </label>
                            </div>
                            <div class="span6">
                                <label>
                                    Hệ thống sân <b>@Model.StadiumName.ToUpper()</b>
                                    <input style="width: 450px;" name="Stadium" id="Stadium" type="text" value="@Model.StadiumAddress" disabled="disabled">
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Ngày đặt
                                    <input name="Date" id="Date" type="text" placeholder="Ngày đặt sân" required="required" value="@date">
                                    <script>
                                        $('#Date').datepicker({
                                            format: "dd/mm/yyyy",
                                            language: "vi"
                                        });
                                    </script>
                                    <div class="alert alert-danger" id="Date_Error" style="display: none"></div>
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Giờ đặt<br />
                                    <div class="input-append bootstrap-timepicker">
                                        <input name="StartTime" id="startTime" type="text" class="span2 input-time-collapse" value="@time" />
                                        <script type="text/javascript">
                                            $(document).ready(function () {
                                                $('#startTime').timepicker({
                                                    showMeridian: false,
                                                    defaultTime: $('#startTime').val(),
                                                    minuteStep: 30,
                                                    showInputs: false
                                                });
                                                var timepicker = document.getElementById("startTime");
                                                timepicker.onkeydown = function () {
                                                    return false;
                                                }
                                            });
                                        </script>
                                        <span class="add-on"><i class="icon-time"></i></span>
                                    </div>
                                    <div class="alert alert-danger" id="StartTime_Error" style="display: none"></div>
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Thời lượng
                                    <select id="duration" name="Duration" data-cur="@duration">
                                        <option value="1" selected="selected">60 phút</option>
                                        <option value="1.5">90 phút</option>
                                        <option value="2">120 phút</option>
                                        <option value="2.5">150 phút</option>
                                        <option value="3">180 phút</option>
                                    </select>
                                    <script type="text/javascript">
                                        $(document).ready(function () {
                                            $("#duration").val($("#duration").data("cur"));
                                        });
                                    </script>
                                </label>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="span9">
                                <h4>THÔNG TIN KHÁCH HÀNG:</h4>
                            </div>
                            <div class="span3">
                                <label>
                                    Tên đầy đủ
                                    <input name="FullName" type="text" placeholder="Tên đầy đủ" required="required" value="@fullname">
                                    <div class="alert alert-danger" id="FullName_Error" style="display: none"></div>
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Số điện thoại
                                    <input name="PhoneNumber" id="phoneNumber" type="text" placeholder="Số điện thoại" required="required" value="@phone">
                                    <script type="text/javascript">
                                        $('#phoneNumber').keyup(function (event) {
                                            if (isNaN(String.fromCharCode(event.which))) {
                                                var value = $(this).val();
                                                $(this).val(value.substr(0, value.length - 1));
                                            }
                                        });
                                    </script>
                                    <div class="alert alert-danger" id="PhoneNumber_Error" style="display: none"></div>
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Email
                                    <input name="Email" type="text" placeholder="Email" value="@email">
                                    <div class="alert alert-danger" id="Email_Error" style="display: none"></div>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="span3">
                                <label>
                                    Cần đối thủ
                                    <select id="NeedRival" name="NeedRival" data-cur="@needRival">
                                        <option selected="selected" value="False">Không</option>
                                        <option value="True">Có</option>
                                    </select>

                                </label>
                                <script type="text/javascript">
                                    $(document).ready(function () {
                                        $("#NeedRival").val($("#NeedRival").data("cur"));
                                    });

                                    $(document).ready(function () {
                                        if ($('#NeedRival').val() == 'True') {
                                            $('#RivalInfo').show();
                                        }
                                        else {
                                            $('#RivalInfo').hide();
                                        }
                                        $('#NeedRival').change(function () {
                                            if ($(this).val() == 'True') {
                                                $('#RivalInfo').show();
                                            }
                                            else {
                                                $('#RivalInfo').hide();
                                            }
                                        });
                                    });
                                </script>
                            </div>
                            <div class="span3">
                                <label>
                                    Trạng thái
                                    <select id="Status" name="Status" data-cur="@status">
                                        <option selected="selected" value="Approved">Đã xác nhận</option>
                                        <option value="Denied">Bị từ chối</option>
                                        <option value="Pending">Đang chờ xét</option>
                                    </select>
                                    <script type="text/javascript">
                                        $(document).ready(function () {
                                            $("#Status").val($("#Status").data("cur"));
                                        });
                                    </script>
                                </label>
                            </div>
                        </div>
                        <hr />
                        <div id="RivalInfo" class="row">
                            <div class="span9">
                                <h4>THÔNG TIN ĐỐI THỦ:</h4>
                            </div>
                            <div class="span3">
                                <label>
                                    Tên đầy đủ
                                    <input name="RivalName" type="text" placeholder="Tên đầy đủ" value="@rivalname">
                                    <div class="alert alert-danger" id="RivalName_Error" style="display: none"></div>
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Số điện thoại
                                    <input name="RivalPhone" id="rivalPhone" type="text" placeholder="Điện thoại" value="@rivalphone">
                                    <script type="text/javascript">
                                        $('#rivalPhone').keyup(function (event) {
                                            if (isNaN(String.fromCharCode(event.which))) {
                                                var value = $(this).val();
                                                $(this).val(value.substr(0, value.length - 1));
                                            }
                                        });
                                    </script>
                                    <div class="alert alert-danger" id="RivalPhone_Error" style="display: none"></div>
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Email
                                    <input name="RivalEmail" type="text" placeholder="Email" value="@rivalemail">
                                    <div class="alert alert-danger" id="RivalEmail_Error" style="display: none"></div>
                                </label>
                            </div>
                            <div class="span3">
                                <label>
                                    Trạng thái
                                    <select id="RivalStatus" name="RivalStatus" data-cur="@rivalstatus">
                                        <option value="Approved">Đã xác nhận</option>
                                        <option value="Pending">Đang chờ xét</option>
                                        <option value="Waiting" selected="selected">Đang chờ</option>
                                    </select>
                                    <script type="text/javascript">
                                        $(document).ready(function () {
                                            var rivalStatus = $("#RivalStatus").data("cur");
                                            if (rivalStatus) {
                                                $("#RivalStatus").val(rivalStatus);
                                            }
                                        });
                                    </script>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="span9">
                                <p>
                                    <button class="btn btn-primary book-now groupbtn pull-right" type="button" onclick="window.location = '/StadiumStaff/Reservations/@Request.QueryString["stadium"]'">Hủy bỏ</button>
                                    <button class="btn btn-primary book-now groupbtn pull-right" type="submit" name="Save" onclick="return check()">Thêm đơn đặt sân</button>
                                </p>
                                <br /><br />
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
