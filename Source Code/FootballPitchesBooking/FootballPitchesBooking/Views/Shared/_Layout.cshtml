<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - ĐẶT SÂN BÓNG ĐÁ ONLINE</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.new.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-responsive.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-timepicker.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/jquery.dataTables.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/css/jquery.dataTables_themeroller.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/css/fpb.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/fpb-responsive.css" type="text/css">
    <link rel="stylesheet" href="~/Scripts/slider/default.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/nivo-slider.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/socialcount-with-icons.css" type="text/css" media="screen" />
    
    <link rel="stylesheet" href="~/Content/css/custom.css" type="text/css">

    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.autosize.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.dataTables.columnFilter.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- start header -->
            <div class="span5 logo">
                <a href="/Home">
                    <div class="row">
                        <div class="span4 logo">
                            <h1>ĐẶT SÂN BÓNG ĐÁ<span> ONLINE</span></h1>
                            <p>&#9917;&#9917;&#9917;&#9917;&#9917;</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- collapse login form -->
            <div class="panel-group span7" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title center">

                            @if (User.Identity.IsAuthenticated)
                            {
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">@User.Identity.Name.ToUpper()
                                    <notify id="notify"></notify>
                                    <span class="glyphicon glyphicon-collapse-down pull-right"></span></a>
                                <script type="text/javascript">
                                    $(document).ready(function () {
                                        function GetNotify() {
                                            $.ajax({
                                                url: "/Account/GetCountOfUnreadNotifications",
                                                type: "POST",
                                                success: function (data) {
                                                    $("#notify").html("(" + data + ")");
                                                    $("#notmsg").html("<a href='/Account/Notifications'>Bạn có <b>" + data + "</b> tin nhắn chưa đọc</a>");
                                                }
                                            });
                                            setTimeout(GetNotify, 20000);
                                        }
                                        GetNotify();
                                    });
                                </script>
                            }
                            else
                            {
                                <p><a data-toggle="collapse" data-parent="#accordion" href="#collapseThree">ĐĂNG NHẬP</a> | <a href="/Account/Register">ĐĂNG KÝ</a></p>
                            }

                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="span6 pull-right header-account">
                                <div class="header-user">
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <div class="links">
                                            <a href="/Account/Register">Đăng Ký</a> |
                <a href="/Account/Recovery">Quên Mật Khẩu</a>
                                        </div>
                                        <form class="form-inline" action="/Account/Login" method="post">

                                            <input name="UserName" class="header-login-input" type="text" placeholder="Tên Đăng Nhập">

                                            <input name="Password" class="header-login-input" type="password" placeholder="Mật Khẩu">

                                            <button class="btn btn-primary btn-header-login" type="submit">Đăng Nhập</button>

                                        </form>
                
                                    }
                                    else
                                    {
                                        <div class="links" style="text-align:center">
                                            <notify class="center" id="notmsg"></notify>
                                        </div>

                                        if (User.IsInRole("WebsiteMaster") || User.IsInRole("WebsiteStaff"))
                                        {
                                        <div class="links">
                                            <a href="/Account/BookingHistory">Lịch sử đặt sân</a>| <a href="/Account/RivalHistory">Lịch sử cáp kèo</a>| <a href="/WebsiteStaff">Quản trị website</a>| <a href="/Account">Tài khoản</a>| <a href="/Account/Logout">Đăng xuất</a>
                                        </div>
                                        }
                                        else if (User.IsInRole("StadiumOwner") || User.IsInRole("StadiumStaff"))
                                        {
                                        <div class="links">
                                            <a href="/Account/BookingHistory">Lịch sử đặt sân</a>| <a href="/Account/RivalHistory">Lịch sử cáp kèo</a>| <a href="/StadiumStaff">Quản lý sân bóng</a>| <a href="/Account">Tài khoản</a>| <a href="/Account/Logout">Đăng xuất</a>
                                        </div>
                                        }
                                        else
                                        {
                                        <div class="links">
                                            <a href="/Account/BookingHistory">Lịch sử đặt sân</a>| <a href="/Account/RivalHistory">Lịch sử cáp kèo</a>| <a href="/Account">Tài khoản</a>| <a href="/Account/Logout">Đăng xuất</a>
                                        </div>
                                        }


                                    }
                                </div>
                                <!-- /account -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>






            <!-- end collapse login form -->


        </div>
        <div class="row">
            <div class="span6 pull-right main_menu">
                <div class="navbar">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>

                        <div class="nav-collapse">
                            <ul class="nav nav-pills">
                                <li class="@ViewBag.HOME"><a href="/Home">TRANG CHỦ</a></li>
                                <li class="@ViewBag.STADIUM"><a href="/Stadium">SÂN BÓNG</a></li>
                                <li class="@ViewBag.RIVAL"><a href="/Stadium/Rivals">TÌM KÈO</a></li>
                                <li class="@ViewBag.QUICKSEARCH"><a href="/Stadium/QuickSearch">TÌM SÂN NHANH</a></li>                                
                                <li class="@ViewBag.JOINUS"><a href="/Stadium/JoinUs">GIA NHẬP CHÚNG TÔI</a></li>
                                <li class="@ViewBag.ABOUTUS"><a href="/Home/AboutUs">GIỚI THIỆU</a></li>
                            </ul>
                        </div>
                        <!-- /.nav-collapse -->
                    </div>
                </div>
                <!-- /navbar -->
            </div>
        </div>
        <!-- end header -->

        <!-- render advertise -->
        @Html.Action("Advertise", "Home")
        <!-- end advertise -->

        @if (User.IsInRole("BannedMember") && !Request.RawUrl.Equals("/Account/Block"))
        {
            Response.Redirect("~/Account/Block");
        }

        <!-- render content -->
        @RenderBody()
        <!-- end content -->
    </div>
    <!-- /container -->
