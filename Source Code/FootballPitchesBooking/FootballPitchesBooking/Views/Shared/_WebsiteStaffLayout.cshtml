<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - ĐẶT SÂN BÓNG ĐÁ ONLINE</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.new.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-responsive.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap-timepicker.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/fpb.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/fpb-responsive.css" type="text/css">
    <link rel="stylesheet" href="~/Scripts/slider/default.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/nivo-slider.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/socialcount-with-icons.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/css/custom.css" type="text/css">

    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- start header -->
            <div class="span5 logo">
                <a href="/WebsiteStaff">
                    <div class="row">
                        <div class="span4 logo">
                            <h1>ĐẶT SÂN BÓNG ĐÁ<span> ONLINE</span></h1>
                            <p>&#9917;&#9917;&#9917;&#9917;&#9917;</p>
                            <h1><span>TRANG QUẢN TRỊ</span></h1>
                        </div>
                    </div>
                </a>
            </div>
            <div class="span6 pull-right header-account">
                <div class="header-user">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <div class="links">
                            <a href="/Account/Register">Đăng Ký</a> |
                <a href="/Account/Recovery">Quên Mật Khẩu</a>
                        </div>
                        <form action="/Account/Login" method="post">
                            <div class="control-input">
                                <span class="input">
                                    <input name="UserName" class="header-login-input" type="text" placeholder="Tên Đăng Nhập"></span>
                            </div>
                            <div class="control-input">
                                <span class="input">
                                    <input name="Password" class="header-login-input" type="password" placeholder="Mật Khẩu"></span>
                            </div>
                            <div class="control">
                                <span class="control-button">
                                    <button class="btn btn-primary btn-header-login" type="submit">Đăng Nhập</button></span>
                            </div>
                        </form>
                
                    }
                    else
                    {
                        <div class="links">
                            XIN CHÀO <a href="/Account">@User.Identity.Name.ToUpper()</a>
                            <p><a href="/Home">TỚI TRANG CHỦ</a> | <a href="/Account/Logout">ĐĂNG XUẤT</a></p>
                        </div>
                    }
                </div>
                <!-- /account -->
            </div>
        </div>
        <div class="row">
            <div class="span6 pull-right main_menu">
                <div class="navbar">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>

                        <div class="nav-collapse">
                            <ul class="nav nav-pills">
                                @if (User.IsInRole("WebsiteMaster"))
                                {
                                    <li class="@ViewBag.REQUEST"><a href="/WebsiteStaff/JoinRequests">YÊU CẦU THAM GIA</a></li>
                                    <li class="@ViewBag.STADIUM"><a href="/WebsiteStaff/Stadiums">SÂN BÓNG</a></li>
                                    <li class="@ViewBag.MEMBER"><a href="/WebsiteStaff/Users">THÀNH VIÊN</a></li>
                                    <li class="@ViewBag.RANK"><a href="/WebsiteStaff/MemberRanks">HỆ THỐNG CẤP BẬC</a></li>
                                    <li class="@ViewBag.ADVERTISEMENT"><a href="/WebsiteStaff/Advertisements">QUẢNG CÁO</a></li>
                                }
                                else
                                {
                                    <li class="@ViewBag.MEMBER"><a href="/WebsiteStaff/Users">THÀNH VIÊN</a></li>
                                    <li class="@ViewBag.ADVERTISEMENT"><a href="/WebsiteStaff/Advertisements">QUẢNG CÁO</a></li>
                                }
                            </ul>
                        </div>
                        <!-- /.nav-collapse -->
                    </div>
                </div>
                <!-- /navbar -->
            </div>
        </div>
        <!-- end header -->
        <!-- render content -->
        @RenderBody()
        <!-- end content -->
    </div>
    <!-- /container -->

    <script type="text/javascript" src="~/Scripts/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap2.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap/js/bootstrap3.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.nivo.slider.js"></script>
    <script type="text/javascript" src="~/Scripts/socialcount.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.quicksand.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.ui.datepicker-vi-VN.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap-timepicker.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.price_format.2.0.js"></script>   
    <script type="text/javascript" src="~/Scripts/global.js"></script>
    <script type="text/javascript" src="~/Scripts/websitestaff.js"></script>
</body>
</html>
