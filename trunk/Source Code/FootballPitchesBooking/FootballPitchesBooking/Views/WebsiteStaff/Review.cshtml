@model FootballPitchesBooking.Models.StadiumReview
@{
    ViewBag.REVIEW = "active";
    ViewBag.Title = "Chi tiết đánh giá sân bóng";
    Layout = "~/Views/Shared/_WebsiteStaffLayout.cshtml";
}

<div class="row websitestaff-stadiumreview">
    <div class="span12">
        <div class="row">
            <div class="span9">
                <fieldset>
                    <h2>CHI TIẾT ĐÁNH GIÁ SÂN BÓNG</h2>                    
                    <div class="span3">
                        <label>
                            Sân bóng
                                <input name="Stadium" id="Stadium" type="text" value="@Model.Stadium.Name" disabled="disabled">
                        </label>
                    </div>
                    <div class="span3">
                        <label>
                            Thành viên
                                <input name="UserName" id="UserName" type="text" value="@Model.User.UserName" disabled="disabled">
                        </label>
                    </div>
                    <div class="span3">
                        <label>
                            Thời gian
                                <input name="CreateDate" id="CreateDate" type="text" value="@Model.CreateDate.ToString("HH:mm:ss - dd/MM/yyyy")" disabled="disabled">
                        </label>
                    </div>
                    <div class="span9">
                        <label>
                            Nội dung
                                <textarea name="ReviewContent" id="ReviewContent" style="width: 685px; min-height: 50px;" disabled="disabled">@Model.ReviewContent</textarea>
                            <script type="text/javascript">
                                $(document).ready(function () {
                                    $('#ReviewContent').autosize();
                                });
                            </script>
                        </label>
                    </div>
                            <div class="span9">
                                <button type="submit" onclick="window.location='/WebsiteStaff/Reviews'" class="btn btn-primary btn-large book-now pull-right groupbtn">Quay lại</button>
                                <button type="submit" onclick="window.location='/WebsiteStaff/DeleteReview/@Model.Id'" class="btn btn-primary btn-large book-now pull-right groupbtn">Xoá đánh giá</button>
                                @if (!Model.IsApproved)
                                {
                                    <button type="submit" onclick="window.location='/WebsiteStaff/ApproveReview/@Model.Id'" class="btn btn-primary btn-large book-now pull-right groupbtn">Duyệt đánh giá</button>
                                }
                                <br />
                            </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
