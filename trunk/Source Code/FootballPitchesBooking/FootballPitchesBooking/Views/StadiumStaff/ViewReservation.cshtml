@model FootballPitchesBooking.Models.StadiumStaffModels.ReservationModel
@{
    ViewBag.RESERVATION = "active";
    ViewBag.Title = "Chi tiết thông tin đơn đặt sân";
    Layout = "~/Views/Shared/_StadiumStaffLayout.cshtml";
}

<div class="row stadiumstaff-view-reservation">
    <div class="span12">
        <div class="row">
            <div class="span9">
                <fieldset>
                    <br />
                    <h1>CHỈNH SỬA THÔNG TIN ĐƠN ĐẶT SÂN</h1>
                    <br />
                    @if (Model.ErrorMessages != null && Model.ErrorMessages.Count() > 0)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in Model.ErrorMessages)
                            {
                                <p>- @error</p>
                            }
                        </div>
                    }
                    <div class="row">
                        <div class="span9">
                            <h4>THÔNG TIN ĐẶT SÂN</h4>
                        </div>
                        <div class="span3">
                            <label>
                                SỐ SÂN
                                    <select id="Fields" name="Fields" data-cur="@Model.FieldId" disabled="disabled">
                                        @if (Model.Fields != null && Model.Fields.Count() > 0)
                                        {
                                            foreach (var item in Model.Fields)
                                            {
                                                if (item.IsActive)
                                                {
                                            <option value="@item.Id">@item.Number</option>
                                                }
                                            }
                                        }
                                    </select>
                                <script type="text/javascript">
                                    $(document).ready(function () {
                                        $("#Fields").val($("#Fields").data("cur"));
                                    });
                                </script>
                            </label>
                        </div>
                        <div class="span6">
                            <label>HỆ THỐNG SÂN <b>@Model.StadiumName.ToUpper()</b>
                                <input style="width: 450px;" name="Stadium" id="Stadium" type="text" value="@Model.StadiumAddress" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                NGÀY ĐẶT
                                    <input name="Date" id="Date" type="text" placeholder="Ngày đặt sân" required="required" value="@Model.Date.ToString("dd/MM/yyyy")" disabled="disabled">
                                <script>
                                    $('#Date').datepicker({
                                        format: "dd/mm/yyyy",
                                        language: "vi"
                                    });
                                </script>
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                GIỜ ĐẶT
                                    <div class="input-append bootstrap-timepicker">
                                        <input name="StartTime" id="startTime" type="text" class="span2 input-time-collapse" value="@((int)Model.StartTime):@(((int)(Model.StartTime - (int)Model.StartTime) * 60).ToString("00"))" disabled="disabled"/>
                                    </div>
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                THỜI LƯỢNG
                                    <select id="duration" name="Duration" data-cur="@Model.Duration" disabled="disabled">
                                        <option value="1">60 phút</option>
                                        <option value="1.5">90 phút</option>
                                        <option value="2">120 phút</option>
                                        <option value="2.5">150 phút</option>
                                        <option value="3">180 phút</option>
                                    </select>
                                <script type="text/javascript">
                                    $(document).ready(function () {
                                        $("#duration").val($("#duration").data("cur"));
                                    });
                                </script>
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span9">
                            <h4>THÔNG TIN KHÁCH HÀNG</h4>
                        </div>
                        <div class="span3">
                            <label>
                                TÊN KHÁCH HÀNG
                                    <input name="Customer" type="text" placeholder="Tên khách hàng" required="required" value="@Model.Customer" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3" style="visibility: hidden;">
                            <label>&nbsp</label>
                            <input type="text">
                            <div class="alert alert-danger" style="display: none"></div>
                        </div>
                        <div class="span3" style="visibility: hidden;">
                            <label>&nbsp</label>
                            <input type="text">
                            <div class="alert alert-danger" style="display: none"></div>
                        </div>
                        <div class="span3">
                            <label>
                                TÊN ĐẦY ĐỦ
                                    <input name="FullName" type="text" placeholder="Tên đầy đủ" required="required" value="@Model.FullName" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                SỐ ĐIỆN THOẠI
                                    <input name="PhoneNumber" id="phoneNumber" type="text" placeholder="Số điện thoại" required="required" value="@Model.PhoneNumber" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                E-MAIL
                                    <input name="Email" type="text" placeholder="E-mail" required="required" value="@Model.Email" disabled="disabled">
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span3">
                            <label>
                                ĐỐI THỦ
                                    <select id="HasRival" name="HasRival" data-cur="@Model.HasRival" disabled="disabled">
                                        <option value="False">Không</option>
                                        <option value="True">Có</option>
                                    </select>

                            </label>
                            <script type="text/javascript">
                                $(document).ready(function () {
                                    $("#HasRival").val($("#HasRival").data("cur"));
                                    if ($('#HasRival').val() == 'True') {
                                        $('#RivalInfo').show();
                                    }
                                    else {
                                        $('#RivalInfo').hide();
                                    }
                                });
                            </script>
                        </div>
                        <div class="span3">
                            <label>
                                TRẠNG THÁI
                                    <select id="Status" name="Status" data-cur="@Model.Status" disabled="disabled">
                                        <option value="Approved">Approved</option>
                                        <option value="Denied">Denied</option>
                                        <option value="Pending">Pending</option>
                                        <option value="Canceled">Canceled</option>
                                    </select>
                            </label>
                            <script type="text/javascript">
                                $(document).ready(function () {
                                    $("#Status").val($("#Status").data("cur"));
                                });
                            </script>
                        </div>
                    </div>
                    <div id="RivalInfo" class="row">
                        <div class="span9">
                            <h4>THÔNG TIN ĐỐI THỦ</h4>
                        </div>
                        <div class="span3">
                            <label>
                                TÊN ĐỐI THỦ
                                    <input name="RivalUser" type="text" placeholder="Khách hàng" required="required" value="@Model.RivalUser" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3" style="visibility: hidden;">
                            <label>&nbsp</label>
                            <input type="text">
                            <div class="alert alert-danger" style="display: none"></div>
                        </div>
                        <div class="span3" style="visibility: hidden;">
                            <label>&nbsp</label>
                            <input type="text">
                            <div class="alert alert-danger" style="display: none"></div>
                        </div>
                        <div class="span3">
                            <label>
                                TÊN ĐẦY ĐỦ
                                    <input name="RivalName" type="text" placeholder="Tên đầy đủ" required="required" value="@Model.RivalName" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                SỐ ĐIỆN THOẠI
                                    <input name="RivalPhone" id="rivalPhone" type="text" placeholder="Điện thoại" required="required" value="@Model.RivalPhone" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                E-MAIL
                                    <input name="RivalEmail" type="text" placeholder="E-mail" required="required" value="@Model.RivalEmail" disabled="disabled">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                TRẠNG THÁI
                                    <select id="Status" name="Status" data-cur="@Model.Status" disabled="disabled">
                                        <option value="Approved">Đã xác nhận</option>
                                        <option value="Denied">Bị từ chối</option>
                                        <option value="Pending">Đang chờ xét</option>
                                        <option value="Canceled">Đã bị huỷ</option>
                                    </select>
                            </label>
                            <script type="text/javascript">
                                $(document).ready(function () {
                                    $("#RivalStatus").val($("#RivalStatus").data("cur"));
                                });
                            </script>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span9">
                            <p>
                                @if (!Model.Status.Equals("Approved"))
                                {
                                    <button class="btn btn-primary book-now groupbtn" type="button" onclick="window.location = '/StadiumStaff/ApproveReservation?id=@Request.QueryString["id"]'">Xác nhận</button>
                                }
                                @if (!Model.Status.Equals("Denied"))
                                {
                                    <button class="btn btn-primary book-now groupbtn" type="button" onclick="window.location = '/StadiumStaff/DenyReservation?id=@Request.QueryString["id"]'">Từ chối</button>
                                }
                                <button class="btn btn-primary book-now groupbtn" type="button" onclick="window.location = '/StadiumStaff/EditReservation?id=@Request.QueryString["id"]'">Chỉnh sửa</button>
                                <button class="btn btn-primary book-now groupbtn" type="button" onclick="window.location = '/StadiumStaff/Reservations'">Quay lại</button>
                            </p>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
