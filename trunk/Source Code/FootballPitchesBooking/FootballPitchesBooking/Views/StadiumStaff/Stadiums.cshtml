@model List<FootballPitchesBooking.Models.Stadium>
@{
    ViewBag.STADIUM = "active";
    ViewBag.Title = "Stadiums";
    Layout = "~/Views/Shared/_StadiumStaffLayout.cshtml";
}

<h1>QUẢN LÝ SÂN BÓNG</h1>


<table class="table table-condensed table-bordered table-hover">
    <thead>
        <tr>
            <th>Tên Sân Bóng</th>
            <th>Địa Chỉ</th>
             <th>Ngày Hết Hạn</th>
            <th>Trạng Thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Street, @item.Ward, @item.District</td>
                <td>@item.ExpiredDate.ToShortDateString()</td>
                @if (item.IsActive)
                {
                    <td>Đang Hoạt Động</td>
                }
                else
                {
                    <td>Không Hoạt Động</td>
                }
                <td class="table-cell-action"><a href="/StadiumStaff/EditStadium?Id=@item.Id">Chỉnh Sửa</a> | <a href="/StadiumStaff/Fields?Stadium=@item.Id">Sân Con</a> | <a href="/StadiumStaff/FieldPrices?Stadium=@item.Id">Bảng Giá</a></td>
            </tr>
        }
    </tbody>
</table>
