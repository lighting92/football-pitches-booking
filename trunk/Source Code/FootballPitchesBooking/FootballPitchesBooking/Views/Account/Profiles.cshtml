@model FootballPitchesBooking.Models.AccountModels.AccountModel

@{
    ViewBag.USER = "active";
    if (User.Identity.Name.Equals(Model.UserName))
    {
        ViewBag.Title = "Thông Tin Cá Nhân";
    }
    else
    {
        ViewBag.Title = "Thông Tin Thành Viên";
    }
    
}


<div class="row Account-view-profiles">
    <div class="span12">
        <div class="row">
            <div class="span9">
                <fieldset>                    
                    @if (User.Identity.Name.Equals(Model.UserName))
                    {
                        <h2>THÔNG TIN THÀNH VIÊN</h2>
                    }
                    @if (Model.ErrorMessages != null && Model.ErrorMessages.Count() > 0)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in Model.ErrorMessages)
                            {
                                <p>- @error</p>
                            }
                        </div>
                    }
                    <div class="row">
                        <div class="span3">
                            <label>
                                Tên tài khoản
                                    <input name="UserName" type="text" disabled="disabled" value="@Model.UserName">
                            </label>
                        </div>
                        <div class="span3" style="visibility: hidden;">
                            <label>&nbsp</label>
                            <input type="text">
                        </div>
                        <div class="span3" style="visibility: hidden;">
                            <label>&nbsp</label>
                            <input type="text">
                        </div>
                        <div class="span3">
                            <label>
                                Họ và tên
                                    <input name="FullName" type="text" disabled="disabled" value="@Model.FullName">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                Số điện thoại
                                    <input name="PhoneNumber" type="text" disabled="disabled" value="@Model.PhoneNumber">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                Email
                                    <input name="Email" type="text" placeholder="E-Mail" disabled="disabled" value="@Model.Email">
                            </label>
                        </div>
                        <div class="span3" style="width: 100%;">
                            <label>
                                Địa chỉ
                                    <input style="width: 685px;" name="Address" type="text" disabled="disabled" value="@Model.Address">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                Điểm tích lũy
                                    <input name="Point" type="text" placeholder="ĐIỂM" disabled="disabled" value="@Model.Point">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                Thứ hạng
                                    <input name="RankName" type="text" placeholder="THỨ HẠNG" disabled="disabled" value="@Model.RankName">
                            </label>
                        </div>
                        <div class="span3">
                            <label>
                                Ngày tham gia
                                    <input name="JoinDate" type="text" placeholder="NGÀY THAM GIA" disabled="disabled" value="@Model.JoinDate.ToString("dd/MM/yyyy")">
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="span9">
                            <br />
                            <button type="button" onclick="window.location = '/Home'" class="btn btn-primary btn-large book-now pull-right groupbtn">Quay lại</button>
                            @if (User.Identity.Name.Equals(Model.UserName))
                            {
                                <button type="button" onclick="window.location = '/Account/Edit'" class="btn btn-primary btn-large book-now pull-right groupbtn">Chỉnh sửa</button>
                                <button type="button" onclick="window.location = '/Account/ChangePassword'" class="btn btn-primary btn-large book-now pull-right groupbtn">Đổi mật khẩu</button>
                            }
                            <br />
                            <br />
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</div>
